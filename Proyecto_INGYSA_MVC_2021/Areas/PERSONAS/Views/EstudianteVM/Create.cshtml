@model Proyecto_INGYSA_MVC_2021.Areas.PERSONAS.Data.MVVM.EstudianteVM

@{
    ViewBag.Title = "CREAR ESTUDIANTE";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <link href="~/Content/create.css" rel="stylesheet"/>
</head>

@using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

<div class="container-form">

    @*Datos Personales*@

    <div class="container-form__div--title">
        <h2 class="container-form__title">Datos Personales</h2>
    </div>

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <label class="container-form__label">
        <span class="container-form__label--name">Nombres: </span>
        @Html.EditorFor(model => model.Estudiante.Nombres, new { htmlAttributes = new { @class = "container-form__label--input" } })
        @Html.ValidationMessageFor(model => model.Estudiante.Nombres, "", new { @class = "text-danger" })
    </label>

    <label class="container-form__label">
        <span class="container-form__label--name">Primer apellido: </span>
        @Html.EditorFor(model => model.Estudiante.ApellidoP, new { htmlAttributes = new { @class = "container-form__label--input" } })
        @Html.ValidationMessageFor(model => model.Estudiante.ApellidoP, "", new { @class = "text-danger" })
    </label>

    <label class="container-form__label">
        <span class="container-form__label--name">Segundo apellido: </span>
        @Html.EditorFor(model => model.Estudiante.ApellidoM, new { htmlAttributes = new { @class = "container-form__label--input" } })
        @Html.ValidationMessageFor(model => model.Estudiante.ApellidoM, "", new { @class = "text-danger" })
    </label>

    <label class="container-form__label">
        <span class="container-form__label--name">Fecha de nacimiento: </span>
        @Html.EditorFor(model => model.Estudiante.FechaNacimiento, new { htmlAttributes = new { @class = "container-form__label--input date-input" } })
        @Html.ValidationMessageFor(model => model.Estudiante.FechaNacimiento, "", new { @class = "text-danger" })
    </label>

    <label class="container-form__label">
        <span class="container-form__label--name">Género: </span>
        @Html.DropDownListFor(model => model.Estudiante.Genero, new SelectList(Enum.GetValues(typeof(Proyecto_INGYSA_MVC_2021.Areas.PERSONAS.Data.Genero))),
            "Seleccione un Genero", new { @class = "container-form__label--input" })
        @Html.ValidationMessageFor(model => model.Estudiante.Genero, "", new { @class = "text-danger" })
    </label>

    <label class="container-form__label">
        <span class="container-form__label--name">Grupo sanguíneo: </span>
        @Html.DropDownListFor(model => model.Estudiante.TipoSangre, new SelectList(Enum.GetValues(typeof(Proyecto_INGYSA_MVC_2021.Areas.PERSONAS.Data.TipoSangre))),
                    "Seleccione un tipo de Sangre", new { @class = "container-form__label--input" })
        @Html.ValidationMessageFor(model => model.Estudiante.TipoSangre, "", new { @class = "text-danger" })
    </label>

    <label class="container-form__label">
        <span class="container-form__label--name">RH: </span>
        @Html.DropDownListFor(model => model.Estudiante.RH, new SelectList(Enum.GetValues(typeof(Proyecto_INGYSA_MVC_2021.Areas.PERSONAS.Data.RH))),
                    "Seleccione un RH", new { @class = "container-form__label--input" })
        @Html.ValidationMessageFor(model => model.Estudiante.RH, "", new { @class = "text-danger" })
    </label>

    <label class="container-form__label">
        <span class="container-form__label--name">Estado: </span>
        @Html.EditorFor(model => model.Estudiante.Estado, new { htmlAttributes = new { @class = "container-form__label--checkBox" } })
        @Html.ValidationMessageFor(model => model.Estudiante.Estado, "", new { @class = "text-danger" })
    </label>

    @*Datos del Documento*@

    <div class="container-form__div--title">
        <h2 class="container-form__title">Datos del Documento</h2>
    </div>

    <label class="container-form__label">
        <span class="container-form__label--name">Tipo de documento: </span>
        @Html.DropDownListFor(model => model.HistoricoDocumentoPersona.TipoDocumento, new SelectList(Enum.GetValues(typeof(Proyecto_INGYSA_MVC_2021.Areas.PERSONAS.Data.TipoDocumento))),
               "Seleccione un tipo de documento", new { @class = "container-form__label--input" })
        @Html.ValidationMessageFor(model => model.HistoricoDocumentoPersona.TipoDocumento, "", new { @class = "text-danger" })
    </label>

    <label class="container-form__label">
        <span class="container-form__label--name">Número de documento: </span>
        @Html.EditorFor(model => model.HistoricoDocumentoPersona.Numero, new { htmlAttributes = new { @class = "container-form__label--input" } })
        @Html.ValidationMessageFor(model => model.HistoricoDocumentoPersona.Numero, "", new { @class = "text-danger" })
    </label>

    <label class="container-form__label">
        <span class="container-form__label--name">Fecha de expedición del documento: </span>
        @Html.EditorFor(model => model.HistoricoDocumentoPersona.FechaExpedicion, new { htmlAttributes = new { @class = "container-form__label--input" } })
        @Html.ValidationMessageFor(model => model.HistoricoDocumentoPersona.FechaExpedicion, "", new { @class = "text-danger" })
    </label>

    <label class="container-form__label">
        <span class="container-form__label--name">Estado: </span>
        @Html.EditorFor(model => model.HistoricoDocumentoPersona.Estado, new { htmlAtributes = new { @class = "container-form__label--checkBox" } })
        @Html.ValidationMessageFor(model => model.HistoricoDocumentoPersona.Estado, "", new { @class = "text-danger" })
    </label>

    @*Datos Telefonicos*@

    <h2><span class="text-primary">Datos Telefonicos</span></h2>
    <div class="form-group">
        @Html.LabelFor(model => model.HistoricoTelefonoPersona.TiposTelefono, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <div class="dropdown">
                @Html.DropDownListFor(model => model.HistoricoTelefonoPersona.TiposTelefono, new SelectList(Enum.GetValues(typeof(Proyecto_INGYSA_MVC_2021.Areas.PERSONAS.Data.TiposTelefono))),
                "Seleccione un tipo de telefono", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.HistoricoTelefonoPersona.TiposTelefono, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.HistoricoTelefonoPersona.Numero, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <div class="checkbox">
                @Html.EditorFor(model => model.HistoricoTelefonoPersona.Numero, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.HistoricoTelefonoPersona.Numero, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.HistoricoTelefonoPersona.Estado, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <div class="checkbox">
                @Html.EditorFor(model => model.HistoricoTelefonoPersona.Estado)
                @Html.ValidationMessageFor(model => model.HistoricoTelefonoPersona.Estado, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    @*Datos de ubicación*@

    <h2><span class="text-primary">Datos de ubicación</span></h2>

    <div class="form-group">
        @Html.LabelFor(model => model.HistoricoPersonaDireccion.Direccion, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <div class="checkbox">
                @Html.EditorFor(model => model.HistoricoPersonaDireccion.Direccion, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.HistoricoPersonaDireccion.Direccion, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.HistoricoPersonaDireccion.Estado, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <div class="checkbox">
                @Html.EditorFor(model => model.HistoricoPersonaDireccion.Estado)
                @Html.ValidationMessageFor(model => model.HistoricoPersonaDireccion.Estado, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
