@model Proyecto_INGYSA_MVC_2021.Models.CreateNewRole

@{
    ViewBag.Title = "Crear un rol";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <link href="~/Content/forms.css" rel="stylesheet" /><link rel="stylesheet" href="~/Content/forms_desktop.css" media="screen and (min-width: 530px)">
</head>

<main class="main">
    @using (Html.BeginForm())
     {
        @Html.AntiForgeryToken()

        <div class="container-form">

            <div class="container-form__div--title">
                <h2 class="container-form__title">@ViewBag.Title</h2>
            </div>

            @*<label class="container-form__label">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            </label>*@

            <label class="container-form__label">
                <span class="container-form__label--name">Nombre de rol: </span>
                @Html.EditorFor(model => model.Role, new { htmlAttributes = new { @class = "container-form__label--input" } })
                @Html.ValidationMessageFor(model => model.Role, "", new { @class = "text-danger" })
            </label>
            <label class="container-form__label"></label>

            <input type="submit" value="Crear" class="container-form__label--button" />
        </div>
     }
</main>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
