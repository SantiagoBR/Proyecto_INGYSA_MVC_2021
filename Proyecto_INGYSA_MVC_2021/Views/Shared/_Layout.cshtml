@model Proyecto_INGYSA_MVC_2021.Models.LoginViewModel 

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title | INGYSA</title>
    <link rel="shortcut icon" href="~/img/Logo_INGYSA.png">
    <link rel="stylesheet" href="~/Content/layout.css">
    <link rel="stylesheet" href="~/Content/layout_tablet.css" media="screen and (min-width: 500px)">
    <link rel="stylesheet" href="~/Content/layout_desktop.css" media="screen and (min-width: 850px)">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header class="header">
        <div class="nav-container">
            <div class="logo-container">
                <a href="#" class="nav-logo"></a>
                <span class="nav-logo-words">
                    INGYSA
                </span>
            </div>
            <span class="menu-icon">
                <i class="fas fa-bars"></i>
            </span>
            <nav class="nav">
                    @if (Request.IsAuthenticated)
                    {
                        <ul class="nav-bar">
                            <li class="nav-bar-item"><a href="/">Inicio</a></li>
                            @Html.Partial("_LoginPartial")
                            @*<li class="nav-bar-item">@Context.User.Identity.Name</li>*@
                        </ul>
                    }
                    else
                    {
                        <ul class="nav-bar">
                            <li class="nav-bar-item"><a href="/">Inicio</a></li>
                            <li class="nav-bar-item"><a href="#about">Nosotros</a></li>
                            <li class="nav-bar-item"><a href="#contact">Contacto</a></li>
                            <li class="nav-bar-item"><a href="#team">Equipo</a></li>
                            @*<li class="nav-bar-item">@Context.User.Identity.Name</li>*@
                            @Html.Partial("_LoginPartial")
                        </ul>
                    }
            </nav>
        </div>
    </header>
    @RenderBody()
    <hr />
    <footer class="footer">
        <div class="footer-container">
            <div class="footer-nosotros">
                <h3>
                    Nosotros
                </h3>
                <p>
                    Lorem ipsum dolor, sit amet consectetur adipisicing elit. Neque a aut tempora, earum delectus ex, minima id beatae cumque natus fugit quam hic ad officiis recusandae deserunt animi laboriosam rerum.
                </p>
            </div>
            <div class="footer-redes">
                <h3>
                    Redes
                </h3>
                <div class="footer-redes-fb">
                    <img src="~/img/fb-logo.png" alt="Facebook Logo" class="redes-logo">
                    <a href="">Facebook</a>
                </div>
                <div class="footer-redes-tw">
                    <img src="~/img//tw-logo.png" alt="Twitter Logo" class="redes-logo">
                    <a href="">Twitter</a>
                </div>
                <div class="footer-redes-ig">
                    <img src="~/img/ig-logo.png" alt="Instagram Logo" class="redes-logo">
                    <a href="">Instagram</a>
                </div>
            </div>
            <div class="footer-contacto">
                <h3>
                    Contacto
                </h3>
                <ul class="contact-list">
                    <li class="contact-list-item">
                        <span>
                            <i class="far fa-envelope"></i>
                            correo@correo.com
                        </span>
                    </li>
                    <li class="contact-list-item">
                        <span>
                            <i class="fas fa-phone"></i>
                            11-111-111
                        </span>
                    </li>
                    <li class="contact-list-item">
                        <span>
                            <i class="fas fa-location-arrow"></i>
                            Avenida esperanza #85 - 17
                        </span>
                    </li>
                </ul>
            </div>
        </div>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @*@Scripts.Render("~/bundles/bootstrap")*@
    @Scripts.Render("~/Scripts/nav-var.js")
    @RenderSection("scripts", required: false)
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
</body>
</html>
